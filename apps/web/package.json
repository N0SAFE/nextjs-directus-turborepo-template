{
    "name": "web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "echo": "envcli echo $:{NEXT_PUBLIC_API_URL}$:{API_PING_PATH}",
        "prettify": "bun x prettier . --write --no-error-on-unmatched-pattern",
        "dev": "bun --bun wait-api && concurrently --kill-others-on-fail -n next,routing -c green,magenta \"envcli cross-env NODE_OPTIONS='--inspect' next dev -p $:{NEXT_PUBLIC_APP_PORT} --turbopack\" \"bun --bun dr:build:watch\"",
        "dev:docker": "concurrently --kill-others-on-fail -n next,routing -c green,magenta \"envcli cross-env NODE_OPTIONS='--inspect' next dev -H 0.0.0.0 -p $:{NEXT_PUBLIC_APP_PORT} --turbopack\" \"bun --bun dr:build:watch\"",
        "dev:open": "bun --bun wait-api && concurrently --kill-others-on-fail -n next,routing -c green,magenta \"(envcli open $:{NEXT_PUBLIC_APP_URL} || envcli cmd.exe /c start $:{NEXT_PUBLIC_APP_URL}) && envcli cross-env NODE_OPTIONS='--inspect' next dev -p $:{NEXT_PUBLIC_APP_PORT} --turbopack\" \"bun --bun dr:build:watch\"",
        "wait-api": "envcli echo $:{NEXT_PUBLIC_API_URL}$:{API_PING_PATH} && envcli wait-port $:{NEXT_PUBLIC_API_URL}$:{API_PING_PATH} || wait-port api:8055",
        "analyze": "cross-env ANALYZE=true bun --bun build",
        "build": "bun --bun generate && bun --bun wait-api && next build --turbopack && next-sitemap",
        "build:docker": "cross-env SKIP_STATIC_GENERATION=true bun --bun generate && next build --turbopack",
        "build:static-only": "bun --bun wait-api && next-sitemap",
        "build:no:check": "bun --bun generate && bun --bun wait-api && cross-env NO_CHECK=true next build --turbopack && next-sitemap",
        "compile": "next build --experimental-build-mode=compile --turbopack && next-sitemap",
        "generate": "bun --bun openapi",
        "start": "bun --bun wait-api && envcli next start -p $:{NEXT_PUBLIC_APP_PORT}",
        "start:docker": "bun --bun build:static-only && envcli next start -p $:{NEXT_PUBLIC_APP_PORT}",
        "start:production": "envcli next start -p $:{NEXT_PUBLIC_APP_PORT}",
        "lint": "next lint",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "clean": "rimraf .next",
        "dr:build": "bun x --yes declarative-routing build",
        "dr:build:watch": "bun x --yes declarative-routing build --watch",
        "openapi": "bun --bun dr:build && bun --bun openapi:yaml && bun --bun openapi:html",
        "openapi:yaml": "bun run ./src/routes/openapi.ts",
        "openapi:html": "bun x --yes @redocly/cli build-docs openapi-docs.yml"
    },
    "dependencies": {
        "@million/lint": "^1.0.14",
        "@n0safe/envcli": "^1.0.2",
        "@next/bundle-analyzer": "catalog:next",
        "@repo/directus-sdk": "*",
        "@repo/ui": "*",
        "@tanstack/react-query": "catalog:query",
        "@tanstack/react-query-devtools": "catalog:query",
        "babel-plugin-react-compiler": "^19.1.0-rc.2",
        "circular-json": "^0.5.9",
        "concurrently": "catalog:dev",
        "cross-env": "catalog:dev",
        "declarative-routing": "^0.1.20",
        "lucide-react": "catalog:ui",
        "next": "catalog:next",
        "next-auth": "catalog:next",
        "next-sitemap": "catalog:next",
        "nextjs-toploader": "catalog:next",
        "query-string": "catalog:utils",
        "react": "catalog:react",
        "react-dom": "catalog:react",
        "zod": "catalog:utils",
        "zustand": "catalog:utils",
        "lodash.snakecase": "catalog:utils"
    },
    "devDependencies": {
        "@asteasolutions/zod-to-openapi": "^7.3.4",
        "@eslint/eslintrc": "^3",
        "@repo/eslint-config": "*",
        "@repo/prettier-config": "*",
        "@repo/tailwind-config": "*",
        "@repo/tsconfig": "*",
        "@tailwindcss/postcss": "catalog:styling",
        "@tanstack/eslint-plugin-query": "catalog:query",
        "@types/lodash.snakecase": "catalog:utils",
        "@types/node": "^24",
        "@types/nprogress": "^0.2.3",
        "@types/react": "catalog:react",
        "@types/react-dom": "catalog:react",
        "eslint": "catalog:linting",
        "eslint-config-next": "catalog:next",
        "prettier-plugin-tailwindcss": "catalog:linting",
        "rimraf": "catalog:build",
        "tailwindcss": "catalog:styling",
        "typescript": "catalog:build",
        "wait-port": "catalog:dev",
        "yaml": "^2.8.0",
        "@repo/vitest-config": "*",
        "@testing-library/jest-dom": "catalog:testing",
        "@testing-library/react": "catalog:testing",
        "@testing-library/user-event": "catalog:testing",
        "jsdom": "catalog:testing",
        "vitest": "catalog:testing",
        "@vitest/ui": "catalog:testing",
        "@vitest/coverage-v8": "catalog:testing"
    }
}
