{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "update": "bun --bun update && directus database migrate:latest",
    "directus:bootstrap": "directus bootstrap",
    "directus:bootstrap:config.js": "dotenv -v CONFIG_PATH=config.js -- directus bootstrap",
    "bootstrap": "runwhileerror \"node init.js && bun --bun run directus:bootstrap:config.js\"",
    "post-bootstrap": "bun --bun run import",
    "migrate:up": "bun x --bun directus database migrate:up",
    "migrate:down": "bun x --bun directus database migrate:down",
    "migrate:latest": "bun x --bun directus database migrate:latest",
    "generate": "bun --bun run export",
    "build:api:kill": "bun --bun run kill:api",
    "kill:api": "trycli-options --command \"envcli kill-port $:{NEXT_PUBLIC_API_PORT} && envcli wait-on $:{NEXT_PUBLIC_API_URL} -r\" --silent",
    "dev": "dotenv -v CONFIG_PATH=config.js -- directus start",
    "dev:open": "(envcli open $:{NEXT_PUBLIC_API_URL} || envcli cmd.exe /c start $:{NEXT_PUBLIC_API_URL}) && dotenv -v CONFIG_PATH=config.js -- directus start",
    "start": "dotenv -v CONFIG_PATH=config.js -- directus start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "init": "bun --bun run generate:directus:types",
    "generate:directus:types": "bun --bun run export",
    "import": "bun --bun run schema:import && bun --bun run data:import",
    "export": "bun --bun run schema:export && bun --bun run data:export",
    "data:export": "dotenv -v CONFIG_PATH=config.js -- envcli \"wait-port $:{NEXT_PUBLIC_API_URL}$:{API_PING_PATH} && bun x --bun tsx ./bin/seed.ts export -o seed.json -u $:{NEXT_PUBLIC_API_URL} -t $:{API_ADMIN_TOKEN}\"",
    "data:import": "dotenv -v CONFIG_PATH=config.js -- envcli \"wait-port $:{NEXT_PUBLIC_API_URL}$:{API_PING_PATH} && bun x --bun tsx ./bin/seed.ts import -i seed.json -u $:{NEXT_PUBLIC_API_URL} -t $:{API_ADMIN_TOKEN}\"",
    "schema:export": "dotenv -v CONFIG_PATH=config.js -- directus schema snapshot --yes ./snapshot.yaml",
    "schema:import": "dotenv -v CONFIG_PATH=config.js -- directus schema apply --yes ./snapshot.yaml",
    "schema:import:dryRun": "dotenv -v CONFIG_PATH=config.js -- directus schema apply --dry-run ./snapshot.yaml",
    "seed:run": "dotenv -v CONFIG_PATH=config.js -- directus data apply ./seed.yaml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@repo/directus-sdk": "*",
    "commander": "^14.0.0",
    "directus": "^11.0.1",
    "directus-extension-seed": "^2.0.4",
    "mysql2": "^3.11.0"
  },
  "devDependencies": {
    "@n0safe/runwhileerror": "^1.0.0",
    "@repo/vitest-config": "*",
    "tsx": "^4.0.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
