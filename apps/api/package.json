{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with tRPC, Drizzle ORM, and Better Auth",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@trpc/server": "^10.45.0",
    "better-auth": "catalog:auth",
    "drizzle-orm": "catalog:database",
    "drizzle-zod": "catalog:database",
    "postgres": "catalog:database",
    "zod": "catalog:utils",
    "nanoid": "catalog:database",
    "bcrypt": "catalog:database",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tsconfig": "*",
    "@repo/vitest-config": "*",
    "@types/bcrypt": "catalog:database",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "drizzle-kit": "catalog:database",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.16.2",
    "typescript": "catalog:build",
    "vitest": "catalog:testing"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
