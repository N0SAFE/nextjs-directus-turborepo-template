{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with tRPC, Drizzle ORM, and Better Auth",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --preserveWatchOutput",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch --preserveWatchOutput",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@mguay/nestjs-better-auth": "^1.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@orpc/client": "catalog:orpc",
    "@orpc/contract": "catalog:orpc",
    "@orpc/nest": "catalog:orpc",
    "@orpc/openapi": "catalog:orpc",
    "@orpc/server": "catalog:orpc",
    "@orpc/shared": "catalog:orpc",
    "@repo/api-contracts": "*",
    "bcrypt": "catalog:database",
    "better-auth": "^1.3.4",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "nanoid": "catalog:database",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tsconfig": "*",
    "@repo/vitest-config": "*",
    "@types/bcrypt": "catalog:database",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.16.2",
    "typescript": "catalog:build",
    "vitest": "catalog:testing"
  },
  "keywords": [],
