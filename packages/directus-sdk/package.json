{
    "name": "@repo/directus-sdk",
    "version": "1.0.0",
    "main": "index.js",
    "exports": {
        "./schema": "./cache/schema.json",
        ".": {
            "import": {
                "types": "./index.ts",
                "default": "./index.ts"
            },
            "require": {
                "types": "./index.ts",
                "default": "./index.ts"
            }
        },
        "./utils": {
            "import": {
                "types": "./utils.ts",
                "default": "./utils.ts"
            },
            "require": {
                "types": "./utils.ts",
                "default": "./utils.ts"
            }
        },
        "./client": {
            "import": {
                "types": "./client.ts",
                "default": "./client.ts"
            },
            "require": {
                "types": "./client.ts",
                "default": "./client.ts"
            }
        },
        "./indirectus/types/*": {
            "import": {
                "types": "./indirectus/types/*",
                "default": "./indirectus/types/*"
            },
            "require": {
                "types": "./indirectus/types/*",
                "default": "./indirectus/types/*"
            }
        },
        "./commands/*": {
            "import": {
                "types": "./commands/*",
                "default": "./commands/*"
            },
            "require": {
                "types": "./commands/*",
                "default": "./commands/*"
            }
        }
    },
    "scripts": {
        "prettify": "bun x --bun prettier ./**/*.{ts,tsx,js,jsx,css} --write --no-error-on-unmatched-pattern",
        "type-check": "tsc --noEmit",
        "lint": "eslint \"**/*.ts*\"",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "generate": "bun run generate:directus:types",
        "init": "bun run generate:directus:types",
        "build": "bun run generate:directus:types",
        "clean": "rimraf indirectus",
        "generate:directus:types": "bun x --bun envcli \"echo $API_URL$:{API_PING_PATH} && DEBUG=wait-port wait-port $API_URL$:{API_PING_PATH} && n0safe-indirectus sdk generate --url $API_URL --token $:{API_ADMIN_TOKEN} --dir ./indirectus --outputDir ./indirectus -- safe\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.8.0",
        "@repo/eslint-config": "*",
        "@repo/prettier-config": "*",
        "@repo/tsconfig": "*",
        "@repo/vitest-config": "*",
        "@testing-library/jest-dom": "^6.6.3",
        "jsdom": "^26.1.0",
        "typescript": "^5.5.3",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@directus/sdk": "^17.0.0",
        "@n0safe/envcli": "^1.0.2",
        "@n0safe/indirectus": "^1.0.2",
        "next": "15.4.0",
        "rimraf": "^6.0.1",
        "wait-port": "^1.1.0"
    }
}
