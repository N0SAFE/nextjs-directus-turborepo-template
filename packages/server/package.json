{
  "name": "@repo/server",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./db": {
      "import": "./src/db/index.ts",
      "require": "./dist/db/index.cjs.js"
    },
    "./auth": {
      "import": "./src/auth/index.ts",
      "require": "./dist/auth/index.cjs.js"
    },
    "./services/*": {
      "import": "./src/services/*.ts",
      "require": "./dist/services/*.cjs.js"
    },
    "./types": {
      "import": "./src/types/index.ts",
      "require": "./dist/types/index.cjs.js"
    }
  },
  "scripts": {
    "build": "npm run switch:prod && rm -rf ./dist && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "switch:dev": "node scripts/switchToSrc.js",
    "switch:prod": "node scripts/switchToDist.js",
    "dev": "rm -rf ./dist && bun run esbuild && tsc --emitDeclarationOnly --outDir dist -p tsconfig.build.json",
    "esbuild": "tsx ./esbuild.config.ts && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.ts*\"",
    "prettify": "bun x --bun prettier ./**/*.{ts,tsx,js,jsx} --write --no-error-on-unmatched-pattern",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "better-auth": "catalog:auth",
    "drizzle-orm": "catalog:database",
    "drizzle-zod": "catalog:database",
    "postgres": "catalog:database",
    "zod": "catalog:utils",
    "nanoid": "catalog:database",
    "bcrypt": "catalog:database",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tsconfig": "*",
    "@repo/vitest-config": "*",
    "@testing-library/jest-dom": "catalog:testing",
    "jsdom": "catalog:testing",
    "typescript": "catalog:build",
    "vitest": "catalog:testing",
    "drizzle-kit": "catalog:database",
    "esbuild": "^0.20.2",
    "esbuild-plugin-alias": "^0.2.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.2",
    "@types/bcrypt": "catalog:database",
    "@types/node": "^20"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Server package containing business logic, database models, and services"
}