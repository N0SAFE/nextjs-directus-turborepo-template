# API Production Deployment Environment Variables

# Project Configuration
COMPOSE_PROJECT_NAME=my-project

# Database Configuration (PostgreSQL for NestJS)
DB_USER=postgres
DB_PASSWORD=use-a-secure-password-in-production
DB_DATABASE=nestjs_api

# API Configuration
API_PORT=3001
# In production, this might be a domain name
NEXT_PUBLIC_API_URL=https://api.your-domain.com
API_ADMIN_TOKEN=use-a-secure-token-in-production
API_PING_PATH=/health

# Security Settings for Production
JWT_SECRET=generate-a-secure-random-value-for-production
AUTH_SECRET=generate-a-secure-random-value-for-production
BETTER_AUTH_SECRET=generate-a-secure-random-value-for-production
NEXT_PUBLIC_WEB_URL=https://your-domain.com
LOG_LEVEL=warn

# Database URL for production
DATABASE_URL=postgresql://postgres:use-a-secure-password-in-production@api-db-prod:5432/nestjs_api
